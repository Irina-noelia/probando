</head>

<body>
  <section id="header">
    <a href="" ><img src="images/logo.png" class="logo" alt="logo"> </a>

    <div>
     <ul id="navbar">
         <li> <a href="/" class="active">Home </a></li>
         <li> <a href="/products">Shop </a></li>
         <li> <a href="">Nosotros </a></li>
         <li> <a href="">Contacto </a></li>
         <div class="btn-group">
             <button type="button" class="btn btn-default dropdown-toggle"
                     data-toggle="dropdown">
                     <a class="" href="/usuario/login"><i class="fa-solid fa-arrow-right-to-bracket"></i></a>
                     
             </button>
           
             <ul class="dropdown-menu" role="menu">
               <li><a href="#">Acción #1</a></li>
               <li><a href="#">Acción #2</a></li>
               <li><a href="#">Acción #3</a></li>

             </ul>
           </div>   
     </ul>
    </div>
    
 </section>

 <section id="product1" class="section-p1">
  
  <!-- Cuerpo principal -->
  <section class="row-form">
    <article class="col-12  card">
      <div class="card-body">
        <h2 class="text-black text-center ">Crear nuevo producto</h2>
      </div>
    </article>
  </section>
  <section class="bg-home pt-4">
    <div class="container">
      <div class="row-form">
        <div class="col-8 mx-auto  ">
          <div class="create-form text-center">
            <form action="/create" method="POST">
              <div  class="form-group p-1">
                  <label for="nombre">Nombre</label>
                  <input type="text" name="nombre" id="name">
              </div>
              <div  class="form-group p-1">
                <label for="descripcion">Descripción</label>
                <input type="text" name="descripcion" id="name">
            </div>
            <div  class="form-group p-1">
              <label for="precio">Precio</label>
              <input type="text" name="precio" id="price">
            </div>

              <div  class="form-group p-1">
                <label for="imagen">Imagen</label>
                <input accept="image/*" type="file" name ="imagen" multiple>
              </div>

              <div  class="form-group p-1">
                <label for="category">Categoría</label>
                
                <select name="category" id="category">
                <option value="Helados">Helados</option>
                <option value="Postres">Postres</option>
                <option value="Smothies">Smothies</option>
                <option value="Comida frizada">Comida frizzada</option>
              </select>
              </div>
      
              
      
          
              <div class="form-group p-1">
                <button type="submit" class="btn btn btn-info">Crear</button>
                
              </div>

            </form>
            
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="pro-container">
      <% products.forEach( prod => { %>
      <div class="pro">
          <img src="images/<%= prod.imagen %>" alt="" >
          <div class="des">
              <h5> <%= prod.nombre %> </h5>
              <span><%= prod.descripcion %></span>
              <h4> <%= prod.precio %> </h4>
          </div>
      <div class="cart">
          
    <a href="/delete/<%= prod.id %> " class="btn btn-info m-1"><i class="fa-solid fa-trash-can"></i></a> 
    
    <a href="/edit/<%= prod.id %>">
      <button class="btn btn-info m-1"><i class="fa-solid fa-pen-to-square"></i></button>
    </a>
  </div>
      </div>
      <% } ) %>

</section>

  <main class="">
    
    

    
  </main>
</body>

