  <link rel="stylesheet" href="/css/estilo1.css" >
</head>

<body>
  <section id="header">
    <a href="" ><img src="images/logo.png" class="logo" alt="logo"> </a>

    <div>
     <ul id="navbar">
         <li> <a href="/" class="active">Home </a></li>
         <li> <a href="/products">Shop </a></li>
         <li> <a href="">Nosotros </a></li>
         <li> <a href="">Contacto </a></li>
         <div class="btn-group">
             <button type="button" class="btn btn-default dropdown-toggle"
                     data-toggle="dropdown">
                     <a class="" href="/login"><i class="fa-solid fa-arrow-right-to-bracket"></i></a>
                     
             </button>
           
             <ul class="dropdown-menu" role="menu">
               <li><a href="#">Acci칩n #1</a></li>
               <li><a href="#">Acci칩n #2</a></li>
               <li><a href="#">Acci칩n #3</a></li>

             </ul>
           </div>   
     </ul>
    </div>
    
 </section>

  <main class="">
    
    <!-- Cuerpo principal -->
    <section class="row-form">
      <article class="col-12  card">
        <div class="card-body">
          <h2 class="text-black text-center ">Actualizar producto</h2>
        </div>
      </article>
    </section>

    <section class="bg-home pt-4">
      <div class="container">
        <div class="row-form">
          <div class="col-8 mx-auto  ">
            <div class="create-form text-center">
              <form action="/edit/<%= producto.id%>?_method=PUT" method="POST">
                <div class="">
                  <figure class="form-group p-1">
                    <img class="w-80 size" src="/images/<%= producto.image%>" alt="">
                  </figure>
                  <input type="hidden" name="imagen" value="<%= producto.image%>">
                  <!--De esta forma logro conservar y que viaje la imagen anterior de esta forma evito que el usuario seleccione una imagen nuevamente, ( si no lo desea) -->
                  <input type="file" name="imagen" >

                </div>

                <div class="form-group p-1">
                  <label for="name">Nombre</label>
                  <input type="text" class="" name="name" placeholder="nombre"  value="<%= producto.name%>">
                </div>
               
                <div class="form-group p-1">
                  <label for="price">Precio</label>
                  <input type="number" class="" name="price" placeholder="Indique el precio"  value="<%= producto.price%>">
                </div>
                
      
                </div>
                <div class="form-group p-1 text-center">
                  <button type="submit" class=" btn btn-info ">Actualizar</button>
                  
                </div>

              </form>
              
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
