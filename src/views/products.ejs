<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Helártico</title>
        <script src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" ></script>
        <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
        <script src="https://kit.fontawesome.com/278943c891.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/estilo1.css" >
    </head>

    <body>
        <section id="header">
           <a href="" ><img src="images/logo.png" class="logo" alt="logo"> </a>

           <div>
            <ul id="navbar">
                <li> <a href="/" class="active">Home </a></li>
                <li> <a href="">Shop </a></li>
                <li> <a href="">Nosotros </a></li>
                <li> <a href="">Contacto </a></li>
                <div class="btn-group">
                  <button type="button" class="btn btn-default dropdown-toggle"
                  data-toggle="dropdown">
                  <a class="" href="/usuario/login"><i class="fa-solid fa-arrow-right-to-bracket"></i></a>
                  
                  </button>
                  
                    <ul class="dropdown-menu" role="menu">
                      <li><a href="#">Login</a></li>
                      <li><a href="#">Registarse</a></li>
                    </ul>

                  </div>
                
                
            </ul>


           </div>
           
        </section>

        <section id="product1" class="section-p1">
            <h2>Tienda</h2>
            <a href="/create" class="btn btn-danger">Crear nuevo producto</a>
            <div class="pro-container">
                <% products.forEach( prod => { %>
                <div class="pro">
                    <img src="images/<%= prod.imagen %>" alt="" >
                    <div class="des">
                        <h5> <%= prod.nombre %> </h5>
                        <span><%= prod.descripcion %></span>
                        <h4> <%= prod.precio %> </h4>
                    </div>
                <div class="cart">
                    <a href="#" class="btn btn-info m-1" ><i class="fa-solid fa-cart-shopping"></i>  </a>
              <a href="/delete/<%= prod.id %> " class="btn btn-info m-1"><i class="fa-solid fa-trash-can"></i></a> 
              
              <a href="/edit/<%= prod.id %>">
                <button class="btn btn-info m-1"><i class="fa-solid fa-pen-to-square"></i></button>
              </a>
            </div>
                </div>
                <% } ) %>

        </section>
        
    </body>

    
    <footer class="footer-distributed">

        <div class="footer-left">
  
          <h3>Hel<span>Artico</span></h3>
  
          <p class="footer-links">
            <a href="#">Home</a>
            ·
            <a href="#">Nosotros</a>
            ·
            <a href="#">Shop</a>
            ·
            <a href="#">Contacto</a>
            ·
          </p>
  
          <p class="footer-company-name">Helártico © 2015</p>
  
          <div class="footer-icons">
  
            <a href="#"><i class="fa fa-facebook"></i></a>
            <a href="#"><i class="fa fa-twitter"></i></a>
            <a href="#"><i class="fa fa-linkedin"></i></a>
            <a href="#"><i class="fa fa-github"></i></a>
  
          </div>
  
        </div>
  
        
      </footer>

</html>