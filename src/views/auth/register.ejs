<%- include('../partials/head') %>

  <link rel="stylesheet" href="/css/estilo1.css">
  
  </head>
  
  <body>
    <%- include('../partials/header') %>
    <main>
      <main>
        <section class="row-form">
          <article class="col-12  card">
            <div class="card-body">
              <h2 class="text-black text-center ">REGISTRATE</h2>
            </div>
          </article>
        </section>
        <section class="bg-home pt-3">
          <div class="container">
            <div class="row-form">
              <div class="col-8 mx-auto  ">
                <div class="create-form text-center">
      
        
        <form class="form-new" action="/register" method="POST" enctype="multipart/form-data">
            <div>
                <label for="email">Email</label>
                <input type="text" name="email" id="email" value="<%= locals.olds && olds.email ? olds.email : '' %>">
                <% if (locals.errors && errors.email) { %>
                <span><%= errors.email.msg %></span>
                <% } %>
            </div>

            <div>
                <label for="password">Contraseña</label>
                <input type="password" name="password" id="password">
                <% if (locals.errors && errors.password) { %>
                <span><%= errors.password.msg %></span>
                <% } %>
            </div>

            <div>
                <label for="confirm-password">Confirmar contraseña</label>
                <input type="password" name="confirm-password" id="confirm-password">
            </div>
            
            <div>
              <label for="img">Imagen</label>
              <input accept="image/*" type="file" name ="img" multiple>
            </div>

            <div>
                <button type="submit" class="btn btn-info">Unirme</button>
            </div>

        </form>
      </div>
    </main>

  </body>
