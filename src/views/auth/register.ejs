<%- include('../partials/head') %>

  <link rel="stylesheet" href="/css/estilo1.css">

  <script src="/helártico/public/js/script.js"></script>

  <body>
    <%- include('../partials/header') %>

      <main class="main_register">
        <article class="col-12  card">
          <div class="card-body">
            <h2 class=" text-center ">Registrarse</h2>
          </div>
        </article>


        <section class="row-form">

          


          <form class="form-new" action="/register" method="POST" enctype="multipart/form-data">

            <div>
              <label for="email">Email</label>
              <div class="form-error">
                <% if (locals.errors && errors.email) { %>
                  <span>
                    <%= errors.email.msg %>
                  </span>
                  <% } %>
              </div>
              <input class="controls" type="text" name="email" id="email"
                value="<%= locals.olds && olds.email ? olds.email : '' %>" placeholder="Ingrese Email">

            </div>

            <div>
              <label for="password">Contraseña</label>
              <div class="form-error">
                <% if (locals.errors && errors.password) { %>
                  <span>
                    <%= errors.password.msg %>
                  </span>
                  <% } %>
              </div>
              <input class="controls" type="password" name="password" id="password" placeholder="Ingrese Contraseña">

            </div>

            <div>
              <label for="confirm-password">Confirmar contraseña</label>
              <input class="controls" type="password" name="confirm-password" id="confirm-password"
                placeholder="Ingrese Contraseña">
            </div>

            <br>
            
            

            <div>
              <button type="submit" class="btn btn-info unirme-b">Unirme</button>
            </div>

          </form>
          </div>
        </section>
      </main>
      <img class='horizontal' src="/images/horizontal.jpg">

  </body>
